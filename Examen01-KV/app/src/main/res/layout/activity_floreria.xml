<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Floreria">

    <Button
        android:id="@+id/btn_crear_floreria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Crear floreria"
        app:layout_constraintBottom_toTopOf="@+id/rv_florerias"
        app:layout_constraintEnd_toEndOf="@+id/rv_florerias"
        app:layout_constraintStart_toStartOf="@+id/rv_florerias" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_florerias"
        android:layout_width="355dp"
        android:layout_height="394dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Florerias"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_crear_floreria"
        app:layout_constraintStart_toStartOf="@+id/btn_crear_floreria"
        tools:layout_editor_absoluteY="68dp" />

</androidx.constraintlayout.widget.ConstraintLayout>