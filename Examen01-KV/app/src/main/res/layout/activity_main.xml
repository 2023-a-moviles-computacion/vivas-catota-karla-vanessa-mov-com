<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MENÚ"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_florerias"
        app:layout_constraintEnd_toEndOf="@+id/btn_florerias"
        app:layout_constraintStart_toStartOf="@+id/btn_florerias"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.06" />

    <Button
        android:id="@+id/btn_florerias"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:text="Menú florerias"
        app:layout_constraintBottom_toTopOf="@+id/btn_flores"
        app:layout_constraintEnd_toEndOf="@+id/btn_flores"
        app:layout_constraintStart_toStartOf="@+id/btn_flores" />

    <Button
        android:id="@+id/btn_flores"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="340dp"
        android:text="Menú flores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.549"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>