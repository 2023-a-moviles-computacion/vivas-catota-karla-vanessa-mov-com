<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearFlor">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_nombre_flor"
        android:layout_width="323dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/textView5"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/input_color_flor"
        android:layout_width="320dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Color"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_flor"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_flor"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_flor" />

    <EditText
        android:id="@+id/input_fecha_llegada"
        android:layout_width="295dp"
        android:layout_height="63dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Fecha de llegada"
        android:inputType="date"
        app:layout_constraintEnd_toEndOf="@+id/cb_es_nativa"
        app:layout_constraintHorizontal_bias="0.521"
        app:layout_constraintStart_toStartOf="@+id/cb_es_nativa"
        app:layout_constraintTop_toBottomOf="@+id/cb_es_nativa" />

    <EditText
        android:id="@+id/input_precio"
        android:layout_width="296dp"
        android:layout_height="54dp"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Precio"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="@+id/input_fecha_llegada"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_fecha_llegada"
        app:layout_constraintTop_toBottomOf="@+id/input_fecha_llegada" />

    <Button
        android:id="@+id/btn_guardar_flor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/input_precio"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/input_precio"
        app:layout_constraintTop_toBottomOf="@+id/input_precio" />

    <CheckBox
        android:id="@+id/cb_es_nativa"
        android:layout_width="318dp"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:text="Â¿Es nativa?"
        app:layout_constraintEnd_toEndOf="@+id/input_color_flor"
        app:layout_constraintStart_toStartOf="@+id/input_color_flor"
        app:layout_constraintTop_toBottomOf="@+id/input_color_flor" />
</androidx.constraintlayout.widget.ConstraintLayout>