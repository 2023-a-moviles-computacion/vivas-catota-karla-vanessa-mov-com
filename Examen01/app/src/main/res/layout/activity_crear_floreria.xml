<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CrearFloreria">

    <EditText
        android:id="@+id/input_nombre_floreria"
        android:layout_width="334dp"
        android:layout_height="53dp"
        android:layout_marginTop="112dp"
        android:autoText="false"
        android:ems="10"
        android:hint="Nombre"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/input_ubicacion"
        android:layout_width="336dp"
        android:layout_height="66dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Ubicación"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/input_nombre_floreria"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_nombre_floreria"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre_floreria" />

    <EditText
        android:id="@+id/input_telefono"
        android:layout_width="336dp"
        android:layout_height="65dp"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Teléfono"
        android:inputType="phone"
        app:layout_constraintEnd_toEndOf="@+id/input_ubicacion"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/input_ubicacion"
        app:layout_constraintTop_toBottomOf="@+id/input_ubicacion" />

    <Button
        android:id="@+id/btn_guardar_floreria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:text="Guardar"
        app:layout_constraintEnd_toEndOf="@+id/input_telefono"
        app:layout_constraintHorizontal_bias="0.485"
        app:layout_constraintStart_toStartOf="@+id/input_telefono"
        app:layout_constraintTop_toBottomOf="@+id/input_telefono" />

</androidx.constraintlayout.widget.ConstraintLayout>